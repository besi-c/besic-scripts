# Maintainer: Penn Bauman <pcb8gb@virginia.edu>
pkgname=besic-beacon
pkgver=0.1.6
pkgrel=1
pkgdesc="BESI-C bluetooth beacon script"
arch=("any")
depends=("bash" "coreutils" "bluez" "besic-lib")

package() {
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/etc/cron.d"

  cp "$srcdir/beacon.sh" "$pkgdir/usr/bin/besic-beacon"
  chmod 755 "$pkgdir/usr/bin/besic-beacon"

  cp "$srcdir/crontab" "$pkgdir/etc/cron.d/besic-beacon"
}

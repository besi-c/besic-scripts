# Maintainer: Penn Bauman <pcb8gb@virginia.edu>
pkgname=besic-remote
pkgver=0.2.6
pkgrel=1
pkgdesc="BESI-C remote API calling scripts"
arch=("any")
depends=("bash" "curl" "besic-lib")

package() {
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/etc/cron.d"

  cp "$srcdir/announce.sh" "$pkgdir/usr/bin/besic-announce"
  chmod 755 "${pkgdir}/usr/bin/besic-announce"

  cp "$srcdir/heartbeat.sh" "$pkgdir/usr/bin/besic-heartbeat"
  chmod 755 "${pkgdir}/usr/bin/besic-heartbeat"

  cp "$srcdir/update.sh" "$pkgdir/usr/bin/besic-update"
  chmod 755 "${pkgdir}/usr/bin/besic-update"

  cp "$srcdir/crontab" "$pkgdir/etc/cron.d/besic-remote"
}

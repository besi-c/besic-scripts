# Maintainer: Penn Bauman <pcb8gb@virginia.edu>
pkgname=besic-heartbeat
pkgver=0.1.1
pkgrel=1
pkgdesc="BESI-C heartbeat scripts"
arch=("any")
depends=("bash" "curl" "besic-lib")

package() {
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/etc/besic"

  cp "$srcdir/heartbeat.sh" "$pkgdir/usr/bin/besic-heartbeat"
  chmod 755 "${pkgdir}/usr/bin/besic-heartbeat"
}

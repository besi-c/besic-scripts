# Maintainer: Penn Bauman <pcb8gb@virginia.edu>
pkgname=besic-lib
pkgver=0.2.0
pkgrel=1
pkgdesc="Shared BESI-C scripts"
arch=("any")
depends=("bash")

package() {
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/etc/besic"

  cp "$srcdir/url-conf.sh" "$pkgdir/usr/bin/besic-url-conf"
  chmod 755 "$pkgdir/usr/bin/besic-url-conf"
  cp "$srcdir/default-url.conf" "$pkgdir/etc/besic/url.conf"

  cp "$srcdir/dev-conf.sh" "$pkgdir/usr/bin/besic-dev-conf"
  chmod 755 "${pkgdir}/usr/bin/besic-dev-conf"

  cp "$srcdir/deploy-conf.sh" "$pkgdir/usr/bin/besic-deploy-conf"
  chmod 755 "${pkgdir}/usr/bin/besic-deploy-conf"
}
